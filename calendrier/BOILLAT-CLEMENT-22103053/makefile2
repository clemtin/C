CC = gcc
CFLAGS = -std=c11 -Wpedantic -Wall -Wextra
LDLIBS = -lm
RM = rm -f
OBJ = calendrier.o evenement.o date.o testcalendrier.o
EXE = testcalendrier

# Règle par défaut pour construire l'exécutable
$(EXE): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(EXE) $(LDLIBS)

#Règle pour générer date.o à partir de date.c
date.o: date.c date.h
	$(CC) $(CFLAGS) -c date.c

# Règle pour générer evenement.o à partir de evenement.c
evenement.o: evenement.c evenement.h
	$(CC) $(CFLAGS) -c evenement.c

#Règle pour générer calendrier.o à partir de calendrier.c
calendrier.o: calendrier.c calendrier.h
	$(CC) $(CFLAGS) -c calendrier.c

# Règle pour générer testcalendrier.o à partir de testcalendrier.c
testcalendrier.o: testcalendrier.c evenement.h date.h calendrier.h
	$(CC) $(CFLAGS) -c testcalendrier.c


# Règle pour nettoyer les fichiers objets et l'exécutable
clean:
	$(RM) $(OBJ) $(EXE)